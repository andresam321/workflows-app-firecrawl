{
  "metadata": {
    "workflows_module_schema_version": "1.0.0"
  },
  "fields": [
    {
      "id": "url",
      "type": "string",
      "label": "URL to Scrape",
      "validation": {
        "required": true
      }
    },
    {
      "id": "screenshot_type",
      "type": "string",
      "label": "Screenshot Type",
      "description": "Choose what kind of screenshot you want",
      "ui_options": {
        "ui_widget": "SelectWidget"
      },
      "choices": {
        "values": [
          { "value": "None" },
          { "value": "Standard Screenshot" },
          { "value": "Full Page Screenshot" }
        ]
      },
      "validation":{
        "required":false
      }
    },
    {
      "id": "html_type",
      "type": "string",
      "label": "HTML Format",
      "description": "Choose what kind an HTML Format",
      "ui_options": {
        "ui_widget": "SelectWidget"
      },
      "choices": {
        "values": [
          { "value": "None" },
          { "value": "Clean HTML" },
          { "value": "Raw HTML" }
        ]
      },
      "validation":{
        "required":false
      }
    },
    {
      "id": "extract_links",
      "type": "boolean",
      "label": "Link Extraction",
      "description": "Extract All Links from the page.",
      "validation": {
        "required": false
      }
    },
    {
      "id": "extract_json",
      "type": "boolean",
      "label": "Json Extraction",
      "description": "Extract JSON data from the page.",
      "validation": {
        "required": false
      }
    },
    {
      "id": "extract_prompt",
      "type": "string",
      "label": "Extraction Prompt",
      "description": "Enter what you want to extract, e.g., 'Product names and prices'.",
      "conditions": {
        "extract_json": true
      },
      "validation": {
        "required": true
      }
    },
    {
      "id": "extract_markdown",
      "type": "boolean",
      "label": "Extract Page as Markdown",
      "description": "Extract the page content as Markdown format.",
      "validation": {
        "required": false
      }
    },
  {
  "type": "object",
  "id": "format_options",
  "label": "Select a format to display",
  "description":"Must select None to start a new scrape",
  "ui_options": {
    "ui_widget": "SelectWidget"
  },
  "content": {
    "type": ["managed"],
    "content_objects": [
      {
        "id": "format_options"
      }
    ]
  },
  "validation": {
    "required": true
  }
}
  ],
  "ui_options": {
    "ui_order": ["url", "screenshot_type","html_type","extract_links","extract_json","extract_prompt", "extract_markdown","scrape_results"]
  }
}
